<h2>Results index</h2>

<table class="table table-hover table-inverse">
    <!--検索対象モデルがpostの時 -->
    <% if @range == "post" %>
        <% @posts.each do |post| %>
            <tr>
            <td><%= post.title %></td>
            </tr>
        <% end %>
    <% else %>
    <!--検索対象モデルがpostではない時(= 検索対象モデルがcampsiteの時) -->

        <% @campsites.each do |campsite| %>
        <tr>
            <td><%= campsite.name %></td>
            <td><%= campsite.introduction %></td>
        </tr>
        <% end %>
    <% end %>

</table>